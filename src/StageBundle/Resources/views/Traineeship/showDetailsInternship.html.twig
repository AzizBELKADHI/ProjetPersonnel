{% extends 'Backbase.html.twig' %}

{% block content %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Internships management
            </h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-calendar"></i> Internships</li>
                <li class="active"><a href="{{ path("stage_back") }}">Internships management</a></li>
            </ol>
        </section>
        <section class="content">
            <!-- Default box -->
            <div class="row">

                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h2 class="box-title">Internship details </h2>
                            <div class="box-tools pull-right">
                                <a href="{{ path("stage_back") }}" type="button" class="btn btn-default btn-xs" title="Retour">
                                    <i class="fa fa-arrow-left"> </i>
                                </a>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="col-md-6">
                                <h3>First name :</h3> {{ stages.userUser.firstName }}
                            </div>
                                <div class="col-md-6">
                                <h3>Name :</h3>

                                {{ stages.userUser.name }}
                                </div>
                            <div class="col-md-6">
                                    <h3>Company : </h3>
                                {{ stages.company }}
                            </div>
                                <div class="col-md-6">
                                <h3>Start date :</h3> {{ stages.startDate|date("m/d/Y") }}
                                </div>
                                    <div class="col-md-6">
                                    <h3>Duration : </h3> {{ stages.duration }}
                                    </div>
                                        <div class="col-md-6">
                                            <h3>Status : </h3> {{ stages.status }}
                                        </div>
                                            <div class="col-md-6">
                                <h3>Missions : </h3> {{ stages.missions }}
                            </div>
                            <div class="col-md-6">
                                <h3>Tuteur : </h3> {{ stages.tuteur }}
                            </div>
                        </div>
                        <div class="box-footer">
                        </div>
                    </div>
                </div>

            </div>
        </section>

    </div>

{% endblock %}
